<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/additionalStyle.css")
    
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
</head>
<body style="background: #f1f2f7; -moz-min-width: 440px; -ms-min-width: 440px; -o-min-width: 440px; -webkit-min-width: 440px; min-width: 440px;">
    <section id="container">
        <header class="header white-bg">
            @Html.ActionLink("Pharmacy Application", "Index", "Home", null, new { @class = "logo" })
        </header>
        <aside>
            <div id="sidebar" class="nav-collapse" style="overflow: hidden; outline: none;">
                <ul class="sidebar-menu">
                    <li>@Html.ActionLink("Pharmacies", "Index", "Pharmacy")</li>
                    <li>@Html.ActionLink("Medcines", "Index", "Medcine")</li>
                    <li>@Html.ActionLink("Orders", "Index", "Order")</li>
                    <li>@Html.ActionLink("Storage", "Index", "Storage")</li>
                </ul>
            </div>
            <div id="main-content" style="margin-left: 180px;">
                <section class=" wrapper">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    </footer>
                </section>
            </div>
        </aside>

        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
        @RenderSection("scripts", required: false)
    </section>
</body>
</html>
